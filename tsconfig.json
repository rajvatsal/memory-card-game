{
  "compilerOptions": {
    // other options
    "include": ["src"],
    "types": ["vite/client"],
    "lib": ["ESNext","es2020", "dom", "dom.iterable"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "target": "ESNext"
  }
}
